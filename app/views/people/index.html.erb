<div class="container">
<p id="notice"><%= notice %></p>


  <h1>Personas Registradas</h1>
    
  <br>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Edad</th>
        <th>Fecha de Nacimiento</th>
        <th>Ciudad</th>
        <th>Dirección</th>
        <th>Correo</th>
        <th>Contraseña</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.name %></td>
          <td><%= person.lastname %></td>
          <td><%= person.age %></td>
          <td><%= person.birthday %></td>
          <td><%= person.city %></td>
          <td><%= person.direction %></td>
          <td><%= person.email %></td>
          <td><%= person.password %></td>
          <td><%= link_to 'Ver', person %></td>
          <td><%= link_to 'Editar', edit_person_path(person) %></td>
          <td><%= link_to 'Eliminar', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Registarse', new_person_path,  class:'btn btn-success' %>
</div>