
<%= form_for(person) do |f| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Nombre %>
    <%= f.text_field :name, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Apellido %>
    <%= f.text_field :lastname, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Edad %>
    <%= f.number_field :age, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Fecha_de_Nacimiento %>
    <div class='input-group date' id='datetimepicker1'>      
      <%= f.text_field :birthday, class:'form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :Ciudad %>
    <%= f.text_field :city, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Dirección %>
    <%= f.text_field :direction, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Correo_electronico %>
    <%= f.text_field :email, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Contraseña %>
    <%= f.text_field :password, class:'form-control' %>
  </div>

   <div class="row">    
    <div class="col-sm-6 ">
      <%= link_to 'Atras', people_path, class:'btn btn-primary' %>
    </div>
    <div class="col-sm-6">
      <%= f.submit 'Enviar', class:'btn btn-success pull-right' %>
    </div>
<% end %>

